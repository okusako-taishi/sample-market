= render "layouts/header"
.show-users-wrapper
  .card-wrapper
    .card-wrapper__title 
      クレジットカード情報入力
    = form_tag(cards_path, method: :post, id: "charge-form", class: "show-users-wrapper", name: "inputForm") do
      .card-wrapper__content-number
        カード番号
        %span{class: "required"}
          必須
      = text_field_tag 'payment_card_no', "", class: 'card-wrapper__input', id: "payment_card_no", placeholder: '半角数字のみ', type: "text", maxlength: "16"
    .card-wrapper__image
      = image_tag(image_path('cards/visa.png'), class: 'visa')
      = image_tag(image_path('cards/master.png'), class: 'master')
      = image_tag(image_path('cards/jcb.png'), class: 'jcb')
      = image_tag(image_path('cards/amex.png'), class: 'amex')
      = image_tag(image_path('cards/diners.png'), class: 'diners')
      = image_tag(image_path('cards/discover.png'), class: 'discover')

    
    .card-wrapper__content-number
      有効期限
      %span{class: "required"}
        必須
    .card-wrapper__input__input-num
      .month
        %select#payment_card_month.card-default{name: "payment_card_month", type: "text"}
          %option{value: "1"} 01
          %option{value: "2"} 02
          %option{value: "3"} 03
          %option{value: "4"} 04
          %option{value: "5"} 05
          %option{value: "6"} 06
          %option{value: "7"} 07
          %option{value: "8"} 08
          %option{value: "9"} 09
          %option{value: "10"} 10
          %option{value: "11"} 11
          %option{value: "12"} 12
        .month-details 
          月
      .year
        %select#payment_card_year.card-default{name: "payment_card_year", type: "text"}
          %option{value: "2020"} 20
          %option{value: "2021"} 21
          %option{value: "2022"} 22
          %option{value: "2023"} 23
          %option{value: "2024"} 24
          %option{value: "2025"} 25
          %option{value: "2026"} 26
          %option{value: "2027"} 27
          %option{value: "2028"} 28
          %option{value: "2029"} 29
          %option{value: "2030"} 30
        .year-details
          年
    .card-wrapper__content-number
      セキュリティコード
      %span{class: "required"}
        必須
    .card-wrapper__cardsecurity
      = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'card-wrapper__cardsecurity__form', id: "payment_card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号'
    .add
    = submit_tag "登録", class: "submit-btn", id: "payment_card_submit-button"
= render "layouts/footer"
= render 'layouts/header'
.show-card-wrapper
  .card-wrapper2
    .card-wrapper2__title
      登録クレジットカード情報
    .card-wrapper2__list
      .card-wrapper2__list__title
        クレジットカード一覧
      .card-wrapper2__list__frame
        .card-wrapper2__info
          .card-wrapper2__info__brand
            // showメソッドで定義した@card_srcを呼び出し
            // 画像をcardsというフォルダを作り、入れておく
            = image_tag "cards/#{@card_src}", class: "credit_card_info__brand__img", alt: @card_brand
          .card-wrapper2__info__numbers
            .number
              // Pay.jpから取得したカード番号の末尾４桁を取得
              = "**** **** **** " + @customer_card.last4
            .expiration-date__title
              有効期限
            .expiration_date__info
              // showメソッドで定義した有効期限の年と月を取得
              = @exp_month + " / " + @exp_year
        .destroy__function
          .destroy__function__link
            // 削除ボタンを作成、押すとdestroyメソッドが働くように
            = link_to card_path, method: :delete, class: "destroy__btn" do 
              削除する
      .payment-details
        = link_to "支払い方法について >", "", class: "payment-details__btn"
= render 'layouts/footer'